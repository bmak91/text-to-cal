{
  "manifest_version": 3,
  "name": "Text to Calendar",
  "version": "1.0.3",
  "permissions": [
    "menus",
    "contextMenus",
    "downloads",
    "storage",
    "notifications"
  ],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "Text to Calendar",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/calendar_16.png",
      "48": "icons/calendar_48.png",
      "128": "icons/calendar_128.png"
    }
  },
  "icons": {
    "16": "icons/calendar_16.png",
    "48": "icons/calendar_48.png",
    "128": "icons/calendar_128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ics-from-selection@example.com",
      "strict_min_version": "109.0"
    }
  }
}
